<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_gravity="center_horizontal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_record"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:onClick="record"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_replay"
        android:onClick="replay"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button_record"
        android:layout_alignStart="@+id/button_record" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_upload"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button_replay"
        android:layout_alignStart="@+id/button_replay" />

    <ImageView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/animation_button"
        android:layout_alignStart="@+id/animation_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animation_button"
        android:src="@drawable/button_play_00"
        android:layout_below="@+id/button_upload"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
